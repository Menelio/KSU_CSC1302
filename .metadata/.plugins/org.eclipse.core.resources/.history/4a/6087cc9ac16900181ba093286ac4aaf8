	  int[][] board = {
		        {0, 1, 0, 6},
		        {0, 1, 6, 8},
		        {5, 6, 2, 1},
		        {6, 5, 6, 1},
		     
	  };
	  
//////////////////////Debugging    
    System.out.println("\n number of rows "+ (board.length));
    System.out.println("\n number of column "+ (board[0].length));
